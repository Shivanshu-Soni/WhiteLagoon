@{
    ViewData["Title"] = "Your Dream Villa Awaits";
}

<header class="hero-section">
    <div class="hero-carousel">
        <div class="carousel-item active">
            <img src="https://picsum.photos/seed/carousel1/1920/1080" alt="Beautiful villa pool view" class="hero-image" />
        </div>
        <div class="carousel-item">
            <img src="https://picsum.photos/seed/carousel2/1920/1080" alt="Luxury interior" class="hero-image" />
        </div>
        <div class="carousel-item">
            <img src="https://picsum.photos/seed/carousel3/1920/1080" alt="Scenic landscape with villa" class="hero-image" />
        </div>
    </div>
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 class="display-4 animate-fade-in-up">Find Your Perfect Getaway</h1>
        <p class="lead animate-fade-in-up delay-1">Book luxury villas with private pools and stunning views.</p>

        <form class="booking-form animate-fade-in-up delay-2">
            <div class="form-group">
                <label for="destination">Destination</label>
                <input type="text" id="destination" placeholder="e.g., Bali, Tuscany" />
            </div>
            <div class="form-group">
                <label for="checkin">Check-in</label>
                <input type="date" id="checkin" />
            </div>
            <div class="form-group">
                <label for="checkout">Check-out</label>
                <input type="date" id="checkout" />
            </div>
            <div class="form-group">
                <label for="guests">Guests</label>
                <input type="number" id="guests" value="2" min="1" />
            </div>
            <button type="submit" class="btn-search">Search</button>
        </form>
    </div>
</header>

<section class="featured-villas">
    <div class="container text-center">
        <h2 class="section-title animate-on-scroll fade-in-up">Featured Properties</h2>
        <p class="section-subtitle animate-on-scroll fade-in-up delay-1">A selection of our most popular and exclusive villas.</p>

        <div class="villa-grid">
            <div class="villa-card animate-on-scroll fade-in-up delay-2">
                <img src="https://picsum.photos/seed/villa1/600/400" alt="Luxury Beachfront Villa" class="villa-card-img" />
                <div class="villa-card-body">
                    <h3 class="villa-title">Serenity by the Sea</h3>
                    <p class="villa-location">Malibu, California</p>
                    <p class="villa-desc">A stunning 5-bedroom villa with direct beach access and an infinity pool.</p>
                    <a href="#" class="btn-details">View Details</a>
                </div>
            </div>

            <div class="villa-card animate-on-scroll fade-in-up delay-3">
                <img src="https://picsum.photos/seed/villa2/600/400" alt="Tuscan Hillside Estate" class="villa-card-img" />
                <div class="villa-card-body">
                    <h3 class="villa-title">Tuscan Hillside Estate</h3>
                    <p class="villa-location">Tuscany, Italy</p>
                    <p class="villa-desc">Experience classic Italian charm in this restored farmhouse with panoramic views.</p>
                    <a href="#" class="btn-details">View Details</a>
                </div>
            </div>

            <div class="villa-card animate-on-scroll fade-in-up delay-4">
                <img src="https://picsum.photos/seed/villa3/600/400" alt="Modern Bali Retreat" class="villa-card-img" />
                <div class="villa-card-body">
                    <h3 class="villa-title">Ubud Jungle Retreat</h3>
                    <p class="villa-location">Bali, Indonesia</p>
                    <p class="villa-desc">A modern 3-bedroom villa nestled in the jungle, perfect for a private escape.</p>
                    <a href="#" class="btn-details">View Details</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features-section">
    <div class="container text-center">
        <h2 class="section-title animate-on-scroll fade-in-up">Why Book With Us?</h2>
        <div class="features-grid">
            <div class="feature-item animate-on-scroll fade-in-scale delay-2">
                <div class="feature-icon">✔️</div>
                <h3>Verified Properties</h3>
                <p>Every villa is hand-picked and verified by our team for quality and comfort.</p>
            </div>
            <div class="feature-item animate-on-scroll fade-in-scale delay-3">
                <div class="feature-icon">🔒</div>
                <h3>Best Price Guarantee</h3>
                <p>We guarantee you'll find the best rates for our exclusive properties right here.</p>
            </div>
            <div class="feature-item animate-on-scroll fade-in-scale delay-4">
                <div class="feature-icon">🎧</div>
                <h3>24/7 Support</h3>
                <p>Our dedicated concierge team is available around the clock to assist you.</p>
            </div>
        </div>
    </div>
</section>


