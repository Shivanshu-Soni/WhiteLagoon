    /* Animations */
    /* Keyframes for hero section elements */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        opacity: 0;
        animation: fadeInUp 0.8s ease-out forwards;
    }

        /* Delay utilities for hero animations */
        .animate-fade-in-up.delay-1 {
            animation-delay: 0.3s;
        }

        .animate-fade-in-up.delay-2 {
            animation-delay: 0.6s;
        }

    /* Keyframes for scroll animations */
    @@keyframes fadeInScale {
        from {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .animate-on-scroll {
        opacity: 0; /* Hidden by default */
        transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }

        .animate-on-scroll.fade-in-up {
            transform: translateY(20px);
        }

        .animate-on-scroll.fade-in-scale {
            transform: scale(0.95);
        }

        /* Class added by JS when element is in view */
        .animate-on-scroll.is-visible {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        /* Delay utilities for scroll animations */
        .animate-on-scroll.delay-1 {
            transition-delay: 0.1s, 0.1s;
        }

        .animate-on-scroll.delay-2 {
            transition-delay: 0.2s, 0.2s;
        }

        .animate-on-scroll.delay-3 {
            transition-delay: 0.3s, 0.3s;
        }

        .animate-on-scroll.delay-4 {
            transition-delay: 0.4s, 0.4s;
        }


